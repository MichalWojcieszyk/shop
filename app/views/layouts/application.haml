!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }/
    %meta{ content: 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }/
    %meta{ content: 'width=device-width, initial-scale=1.0', name: 'viewport' }/
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

  %body#body
    %nav.navbar.navbar-inverse{role: "navigation"}
      .container-fluid
        .navbar-header
          %span.navbar-brand Online shopping
        %ul.nav.navbar-nav
          %li.active
            =link_to 'Home', root_path
          %li.active
            =link_to 'Categories', root_path
          %li.active
            =link_to 'Products', products_path
          %li.active
            -if user_signed_in?
              =link_to "Show user profile", user_path(current_user)

        %p.navbar-text.navbar-right
         
          -if user_signed_in?
            Signed in as 
            = link_to current_user.email, user_path(current_user)
            = link_to 'Logout', destroy_user_session_path, :method => :delete, :class => 'btn btn-danger btn-sm'       
          -else
            
            = link_to 'Login', new_user_session_path, :class => 'btn btn-primary btn-sm'
            or
            = link_to "Sign up", new_user_registration_path, :class => 'btn btn-primary btn-sm'
    
    .container
      .jumbotron
        .row
          .col-lg-12
            = yield
